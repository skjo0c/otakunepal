<div class = "row">
  <div class = "col-md-7 text-center">
    <div class = "banner-image">
      <%= image_tag("front.png", alt: 'Banner', :class => "signup-image") %>
    </div>
  </div>

  <div class = "col-md-2 text-center signup-form">
  
    <div class = "text-signup">  
      <h2>Sign up</h2>
    </div><br/>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <!--   <%= f.error_notification %>
     -->
     <%= devise_error_messages! %>
      <div class="form-inputs">

          <div class = "fields">
            <%= f.text_field :FirstName, class: 'input-from', required: true, autofocus: true, placeholder: "FirstName" %>
          </div>

          <div class = "fields">
            <%= f.text_field :LastName, class: 'input-from', required: true, autofocus: false, placeholder: "LastName" %>
          </div>

          <div class = "fields">
            <%= f.email_field :email, class: 'input-from', required: true, autofocus: true, placeholder: "Email" %>
          </div>

          <div class = "fields">
            <%= f.text_field :username, class: 'input-from', required: true, autofocus: true, placeholder: "Username" %>
          </div>

          <div class = "fields">
            <%= f.telephone_field :mobile, class: 'input-from', input_html: {max: 10, min: 10}, required: true, autofocus: false, placeholder: "Mobile" %>
          </div>

          <div class = "fields">
            <%= f.password_field :password, class: 'input-from', required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), placeholder: "Password" %>
          </div>

          <div class = "fields">
            <%= f.password_field :password_confirmation, class: 'input-from', autofocus: false, required: true, placeholder: "Confirm Password" %>
          </div>

          <br/>
          <div class = "fields">
            <%= f.label 'Profile Picture' %><br>
            <%= f.file_field :photo, class: 'input-from' %>

      </div>

      <br/>
      <div class="form-actions">
        <%= f.submit "Sign up", class: 'signup-button' %>
      </div>

    <% end %>

    <%= render "devise/shared/links" %>

  </div>

</div>