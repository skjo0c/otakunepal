<div class = "row">

  <div class = "col-md-7 text-center">
    <div class = "banner-image">
      <%= image_tag("front.png", alt: 'Banner', :class => "signup-image") %>
    </div>
  </div>

 <div class = "col-md-2 text-center signin-form">
    <div class = "text-signin">  
      <h2>Log in</h2>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="field">
        <%= f.text_field :username, class: 'input-from', autofocus: true, placeholder: "Username" %>
      </div>

      <div class="field">
        <%= f.password_field :password, class: 'input-from', autocomplete: "off", placeholder: "Password" %>
      </div><br/>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: 'signin-button' %>
      </div>
    <% end %>

    <div style= "margin-top: 10px;">
      <p> Don't have account? </p>
    </div>

    <%= render "devise/shared/links" %>

  </div>

</div>